              {(priceRange.min || priceRange.max) && (
                <div className="bg-white/50 p-1 rounded">‚Ä¢ Precio: {priceRange.min ? `S/ ${priceRange.min.toLocaleString()}` : 'Min'} - {priceRange.max ? `S/ ${priceRange.max.toLocaleString()}` : 'Max'}</div>
